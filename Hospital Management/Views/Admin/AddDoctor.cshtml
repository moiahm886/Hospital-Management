@{
    var userid = Convert.ToInt64(ViewData["UserID"]);
}
<h1 class="text-center mb-5">Add Doctor</h1>
<div class="ml-4">
    <form asp-controller="Admin" asp-action="DoctorAdded" method="post">
        <div class="form-group row mb-3">
            <label for="UserId" class="col-sm-2 col-form-label">UserId:</label>
            <div class="col-sm-5">
                <input type="text" class="form-control custom-input" id="UserId" name="UserId" value="@userid" readonly>
            </div>
        </div>
        <div class="form-group row mb-3">
            <label for="Name" class="col-sm-2 col-form-label">Name:</label>
            <div class="col-sm-5">
                <input type="text" class="form-control custom-input" id="Name" name="Name" required>
            </div>
        </div>
        <div class="form-group row mb-3">
            <label for="DateOfBirth" class="col-sm-2 col-form-label">Date of Birth:</label>
            <div class="col-sm-5">
                <input type="date" class="form-control custom-input" id="DateOfBirth" name="DateOfBirth" required>
            </div>
        </div>

        <div class="form-group row mb-3">
            <label for="Specialization" class="col-sm-2 col-form-label">Specialization:</label>
            <div class="col-sm-5">
                <input type="text" class="form-control custom-input" id="Specialization" name="Specialization" required>
            </div>
        </div>

        <div class="form-group row mb-3">
            <label for="ContactNumber" class="col-sm-2 col-form-label">Contact Number:</label>
            <div class="col-sm-5">
                <input type="text" class="form-control custom-input" id="ContactNumber" name="ContactNumber" required>
            </div>
        </div>

        <div class="form-group row mb-3">
            <label for="Email" class="col-sm-2 col-form-label">Email:</label>
            <div class="col-sm-5">
                <input type="email" class="form-control custom-input" id="Email" name="Email" required>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Add Doctor</button>
    </form>
</div>
