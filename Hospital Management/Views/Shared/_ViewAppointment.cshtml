@model List<Hospital_Management.Models.Appointment>
<style>
    table {
        border-collapse: separate;
        border-spacing: 0;
        width: 100%;
        max-width: 600px;
        margin: 0 auto;
        background-color: #fff;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }

    th, td {
        padding: 12px 15px;
        text-align: center;
    }

    thead {
        background-color: #f0f0f0;
    }

    th {
        font-weight: bold;
    }

    tr:nth-child(even) {
        background-color: #f5f5f5;
    }

    tr:hover {
        background-color: #e0e0e0;
    }

</style>
<h1 class="text-center">Appointments</h1>
<div>
    <table class="table" style="border: 1px solid #F5F5DC; border-collapse: collapse; width: 100%; border-spacing: 0;">
        <thead>
            <tr style="border-bottom: 1px solid #F5F5DC;">
                <th style="border: 1px solid #F5F5DC; padding: 8px;">Appointment</th>
                <th style="border: 1px solid #F5F5DC; padding: 8px;">Doctor ID</th>
                <th style="border: 1px solid #F5F5DC; padding: 8px;">Patient ID</th>
                <th style="border: 1px solid #F5F5DC; padding: 8px;">Appoitnment DateTime</th>
                <th style="border: 1px solid #F5F5DC; padding: 8px;">Purpose</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var comp in Model)
            {
                <tr style="border-bottom: 1px solid #F5F5DC;">
                    <td style="border: 1px solid #F5F5DC; padding: 8px;">@comp.AppointmentId</td>
                    <td style="border: 1px solid #F5F5DC; padding: 8px;">@comp.DoctorId</td>
                    <td style="border: 1px solid #F5F5DC; padding: 8px;">@comp.PatientId</td>
                    <td style="border: 1px solid #F5F5DC; padding: 8px;">@comp.AppointmentDateTime</td>
                    <td style="border: 1px solid #F5F5DC; padding: 8px;">@comp.Purpose</td>
                </tr>
            }
        </tbody>
    </table>
</div>